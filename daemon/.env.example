# daemon 환경 설정 (예시)

# 백엔드 API
API_BASE_URL=http://localhost:8000/api/v1
# API 인증: 토큰을 직접 지정하거나, USERNAME/PASSWORD로 토큰 자동 발급
API_TOKEN=
API_USERNAME=admin@jsmoney.com
API_PASSWORD=admin123

# 스케줄러 (APScheduler 기반)
# Cron 형식: 분 시 일 월 요일(0=일, 1=월, ..., 5=금, 6=토)
SCHEDULE_BALANCE_CRON=0 8 * * 1-5        # 평일 08:00 잔고 동기화
SCHEDULE_STRATEGY_CRON=0 9 * * 1-5       # 평일 09:00 전략 루프 시작 (마감까지 루프)
SCHEDULE_PRICE_UPDATE_CRON=*/5 9-16 * * 1-5  # 거래시간 중 5분마다 가격 업데이트

# 스케줄러 동작 옵션
SCHEDULER_COALESCE=true                  # 누적 트리거 합치기
SCHEDULER_MISFIRE_GRACE_TIME=300         # 지연 허용 시간(초)

# 거래 시간 설정
MARKET_OPEN_TIME=09:00                   # 개장 시간 (HH:MM)
MARKET_CLOSE_TIME=15:30                  # 마감 시간 (HH:MM)
STRATEGY_LOOP_INTERVAL=300               # 전략 루프 간격(초)
TRADABLE_EVERYDAY=false                  # 매일 거래 가능(가상화폐 등) 시 true

# 계좌/브로커 설정
ACCOUNT_ID=                              # 특정 계좌만 처리 시 지정 (없으면 전체)
BROKER=demo                              # demo | krx | upbit 등
BROKER_APP_KEY=
BROKER_APP_SECRET=
BROKER_ACCOUNT=12345678-01

# 리스크 한도
MAX_ORDER_VALUE_KRW=1000000
SLIPPAGE_BPS=50                          # 0.50%
MAX_RETRY=3

# 락 설정 (멀티 프로세스 중복 실행 방지)
STRATEGY_LOCK_FILE=/tmp/jsm2026_strategy.lock

# 로깅
LOG_LEVEL=INFO
